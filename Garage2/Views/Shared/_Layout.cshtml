<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"] - Garage2</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/lux-bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column min-vh-100">
    <div class="logo">
        <img src="/images/LogoGarageNew.png" style="max-height: 100%; max-width: 100%" alt="logo"/>
    </div>
    <header>
		<nav class="navbar navbar-expand-sm border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark rounded" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link text-dark rounded" asp-controller="Members" asp-action="Index">Members</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link text-dark rounded" asp-controller="ParkedVehicles" asp-action="Index">Vehicles</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link text-dark rounded" asp-controller="VehicleTypes" asp-action="Index">Vehicle Types</a>
                        </li>
						<li class="nav-item">
							<a class="nav-link text-dark rounded" asp-controller="ParkedVehicles" asp-action="Statistics">Statistics</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark rounded" asp-controller="ParkedVehicles" asp-action="ShowAvailableLots">Parking Space</a>
						</li>
					</ul>
				</div>
				</div>
			</nav>
	</header>
	<div class="container-fluid">
		<main role="main" class="pb-3 text-center">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted mt-auto">
		<div class="container text-center my-auto">
			&copy; 2023 - Garage2
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
