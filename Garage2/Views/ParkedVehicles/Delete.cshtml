@model Garage2.Models.ViewModels.CheckOutVehicleViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2><strong>Check Out Vehicle</strong></h2>

<h3>@Model.Member.FullName,  are you sure you wanna check out your Vehicle?</h3>
<div>
    <h4>Parked Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.ArrivalTime)
	    </dd>
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.CheckOutTime)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.CheckOutTime)
	    </dd>
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.TotalTime)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.TotalTime)
	    </dd>
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.Price)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.Price)
	    </dd>
	    <dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.ParkingSpaceString)
	    </dt>
	    <dd class = "col-sm-10">
			@Html.DisplayFor(model => model.ParkingSpaceString)
	    </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deregister" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
