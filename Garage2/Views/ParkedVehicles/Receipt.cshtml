@model Garage2.Models.ViewModels.CheckOutVehicleViewModel

<!DOCTYPE html>
<html>
<head>
	<title>Receipt</title>
</head>
<body>
	<h2><strong>Receipt</strong></h2>

	<h4>Receipt Details</h4>
	<dl class="row">
		<dt class="col-sm-2">Registration Number</dt>
		<dd class="col-sm-10">@Model.RegistrationNumber</dd>

		<dt class="col-sm-2">Check Out Time</dt>
		<dd class="col-sm-10">@Model.CheckOutTime</dd>

		<dt class="col-sm-2">Price</dt>
		<dd class="col-sm-10">@Model.Price.ToString("0.00")</dd>

		<dt class="col-sm-2">Parking Lot</dt>
		<dd class="col-sm-10">@Model.ParkingSpace</dd>
	</dl>

	<!-- Add any additional content for your receipt -->

	<button onclick="window.print()">Print Receipt</button>
	|
	<a asp-action="Index">Back to List</a>
</body>
</html>