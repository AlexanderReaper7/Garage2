@model Garage2.Models.Entities.ParkedVehicle

@{
    ViewData["Title"] = "Edit";
}

<h2><strong>Edit</strong></h2>

<h4>Parked Vehicle</h4>
<hr />
<div class="row centerContent">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleType.Name" class="control-label"></label>
                <input asp-for="VehicleType.Name" class="form-control" readonly />
                <span asp-validation-for="VehicleType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWheels" class="control-label"></label>
                <input asp-for="NumberOfWheels" class="form-control" />
                <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace" class="control-label"></label>
                <input asp-for="ParkingSpace" class="form-control" readonly />
                <span asp-validation-for="ParkingSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSubSpace" class="control-label"></label>
                <input asp-for="ParkingSubSpace" class="form-control" readonly />
                <span asp-validation-for="ParkingSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" readonly />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
            <input type="hidden" id="registrationNumber" value="@Model.RegistrationNumber" />
            <input type="hidden" id="color" value="@Model.Color" />
            <input type="hidden" id="brand" value="@Model.Brand" />
            <input type="hidden" id="model" value="@Model.Model" />
            <input type="hidden" id="numberOfWheels" value="@Model.NumberOfWheels" />
        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="changesModal" tabindex="-1" role="dialog" aria-labelledby="changesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changesModalLabel">Changes Made</h5>
            </div>
            <div class="modal-body">
                <p id="changesMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="changesModalCloseButton">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
