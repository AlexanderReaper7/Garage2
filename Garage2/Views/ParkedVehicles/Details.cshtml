@using Garage2.Services
@model Garage2.Models.Entities.ParkedVehicle
@inject Garage2.Services.IAvailableLotsService AvailableLotsService

@{
    ViewData["Title"] = "Details";
}

<h2><strong>Details</strong></h2>

<div>
	<h4>Parked Vehicle</h4>
	<hr/>
    <dl class="row">
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.Member.FullName)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.Member.FullName)
	    </dd>
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.Member.PersonNumber)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.Member.PersonNumber)
	    </dd>
	    <dt class = "col-sm-2">
		    @Html.DisplayNameFor(model => model.Member.Membership)
	    </dt>
	    <dd class = "col-sm-10">
		    @Html.DisplayFor(model => model.Member.Membership)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.RegistrationNumber)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.RegistrationNumber)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.VehicleType)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.VehicleType.Name)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.Color)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.Color)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.Brand)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.Brand)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.Model)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.Model)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.NumberOfWheels)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.NumberOfWheels)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.ArrivalTime)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.ArrivalTime)
	    </dd>
	    <dt class="col-sm-2">
		    @Html.DisplayNameFor(model => model.ParkingSpaceString)
	    </dt>
	    <dd class="col-sm-10">
		    @Html.DisplayFor(model => model.ParkingSpaceString)
	    </dd>
    </dl>
</div>
<div class="btn-group">
    @{
        var parkParam = Model.ParkingSpace == 0 ? "Park" : "UnPark";
    }
    @* // Only show Park button if there are available lots
                        // But always UnPark button if the vehicle is parked *@
	@if (parkParam == "UnPark" || AvailableLotsService.IsAvailable(Model.VehicleType.Size))
    {
        <form asp-action="@parkParam">
			<input type="hidden" name="id" id="id" value="@Model.Id" />
            <input type="submit" value="@parkParam" class="btn btn-danger" />
        </form>
    }
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
	<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
	<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
</div>
