@model Garage2.Models.Entities.ParkedVehicle

@{
    ViewData["Title"] = "Details";
}

<h2><strong>Details</strong></h2>

<div>
    <h4>Parked Vehicle</h4>
    <hr />
    <dl class="row centerContent">
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.Member.FullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Member.FullName)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.Member.PersonNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Member.PersonNumber)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.Member.Membership)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Member.Membership)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RegistrationNumber)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.VehicleType)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.VehicleType.Name)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Color)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt>
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Brand)
