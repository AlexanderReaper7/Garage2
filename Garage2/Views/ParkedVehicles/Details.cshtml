            <dt>
                @Html.DisplayNameFor(model => model.ParkingSpaceString)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ParkingSpaceString)
            </dd>
        </div>
    </dl>
</div>
<div class="btn-group">
    @{
        var parkParam = Model.ParkingSpace == 0 ? "Park" : "UnPark";
    }
    <form asp-action="@parkParam">
        <input type="hidden" name="id" id="id" value="@Model.Id" />
        <input type="submit" value="@parkParam" class="btn btn-danger" />
    </form>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
