@model IEnumerable<Garage2.Models.VehicleType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button asp-action="Create" class="btn btn-primary">Create New</button>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>Links</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Name" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Name" class="btn btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Name" class="btn btn-primary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
